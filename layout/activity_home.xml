<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/halutama"
    android:orientation="vertical">

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/bel"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/H_back"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="-35dp"
        android:id="@+id/profile"
        >
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/preofile"/>

    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/cream"
            android:layout_marginTop="20dp"
            android:id="@+id/H_crd_1"/>

    </LinearLayout>





            <RelativeLayout
                android:id="@+id/pencet_new"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:src="@drawable/joker" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-180dp"
                android:id="@+id/about1"
                >

                <ImageView
                    android:id="@+id/pengabdi"
                    android:layout_width="160dp"
                    android:layout_height="155dp"
                    android:src="@drawable/psetan"
                    />
                <ImageView
                    android:id="@+id/resisten"
                    android:layout_width="160dp"
                    android:layout_height="155dp"
                    android:src="@drawable/resistencia"
                    android:layout_marginLeft="140dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up Coming"
                    android:layout_below="@id/resisten"
                    android:layout_marginLeft="180dp"/>


            </RelativeLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="170dp">



            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:id="@+id/service">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#001C3C"
                    android:src="@drawable/love" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/discount">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#001C3C"
                    android:src="@drawable/riwayat"/>


            </RelativeLayout>




    </LinearLayout>


    <RelativeLayout

        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="-170dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"

            android:src="@drawable/berita" />




    </RelativeLayout>




            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="-350dp"
                android:id="@+id/location"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="LOCATION"
                    android:layout_marginLeft="10dp"
                    />



            </RelativeLayout>




    </LinearLayout>






